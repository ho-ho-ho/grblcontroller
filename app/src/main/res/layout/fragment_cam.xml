<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="in.co.gorest.grblcontroller.util.ToolLibrary" />

        <variable
            name="toolLibrary"
            type="ToolLibrary" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{toolLibrary.tools.size + ` Tools available`}" />

        <ListView
            android:id="@+id/tool_library_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>